<article id="profile">
  <header>
    <h1>
      User Profile
    </h1>
  </header>
  <p>About {{username}}</p>
  <p>
    {{#if bio}}
      {{bio}}
    {{else}}
      No bio available.
    {{/if}}
  </p>
  <h2>Preferences</h2>
  {{#if favoriteGameName}}
    <p>Favorite game: <a href="/game/{{favoriteGameId}}">{{favoriteGameName}}</a></p>
  {{else}}
    <p>No favorite game</p>
  {{/if}}
  {{#if leastFavoriteGameName}}
    <p>Least favorite game: <a href="/game/{{leastFavoriteGameId}}">{{leastFavoriteGameName}}</a></p>
  {{else}}
    <p>No least favorite game</p>
  {{/if}}
  <h2>Friends</h2>
  <ul id="friendslist">
    {{#if friends}}
      {{#each friends}}
        <li class="friendelem">
          <a href="/profile/{{id}}">{{username}}</a>
        </li>
      {{/each}}
    {{else}}
      <p>I have no friends</p>
    {{/if}}
  </ul>
  {{#if id}}
    {{#if pageOwned}}
      <a href="/profile/update/bio">Click here to update your bio!</a>
    {{else}}
      {{#if friended}}
        <p>You are friends!</p>
      {{else}}
        <form method="POST" action="/profile/add/{{pageId}}" id="addFriend">
          <button type="submit">Add Friend</button>
        </form>
      {{/if}}
    {{/if}}
  {{/if}}
</article>