<body>
    <header>
        <h1>
            User Profile
        </h1>
    </header>
    <p>About {{username}}</p>
    <p>
        {{#if bio}}
            {{bio}}
        {{else}}
            No bio available.
        {{/if}}
    </p>
    <h2>Preferences</h2>
    {{#if favoriteGameName}}
        <p>Favorite game: {{favoriteGameName}}</p>
    {{else}}
        <p>No favorite game</p>
    {{/if}}
    {{#if leastFavoriteGameName}}
        <p>Least favorite game: {{leastFavoriteGameName}}</p>
    {{else}}
        <p>No least favorite game</p>
    {{/if}}
    <h2>Friends</h2>
    <ul>
        {{#if friends}}
            {{#each friends}}
                <li>
                    <h4>{{self.username}}</h4>
                </li>
            {{/each}}
        {{else}}
            <p>I have no friends</p>
        {{/if}}
    </ul>
    <h2>My Comments</h2>
    <ul>
        {{#if comments}}
            {{#each comments}}
                <li>
                    <h4>{{self.commentUsername}}</h4>
                    <p>{{self.commentText}}</p>
                </li>
            {{/each}}
        {{else}}
            <p>No comments</p>
        {{/if}}
    </ul>
    <a href="/Reviews/{{id}}">My reviews</a>
</body>