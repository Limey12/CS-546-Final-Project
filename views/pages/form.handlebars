<article>
  <h1>{{HTML_title}}</h1>
  <form action={{act}} method="POST" id="{{formId}}">
    <label for="username">
      Username
    </label>
    <input type="text" name="username" id="username" />
    <label for="password">
      Password
    </label>
    <input type="password" name="password" id="password" />
    {{#unless login}}
    <label for="email">
      Email
    </label>
    <input type="email" name="email" id="email" />
    {{/unless}}
    <button type="submit">Submit</button>
  </form>
  {{#if login}}
    <a href="/signup">Need to register? Click here to sign-up</a>
  {{else}}
    <a href="/login/">Already have an account? Click here to log-in</a>
  {{/if}}
  {{#if error}}
    <p id="error">{{errorMsg}}</p>
  {{else}}
    <p id="error"></p>
  {{/if}}
</article>
