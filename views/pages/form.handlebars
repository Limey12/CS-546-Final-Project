<article>
  <div class="form-style" id="logsignform">
  <h1>{{HTML_title}}</h1>
  <form action={{act}} method="POST" id="{{formId}}">
    <label for="username">
      Username
    </label>
    <input type="text" name="username" id="username"/>
    <label for="password" class="form-label">
      Password
    </label>
    <input type="password" name="password" id="password" />
    {{#unless login}}
    <label for="email">
      Email
    </label>
    <input type="email" name="email" id="email" placeholder="name@domain.com"/>
    {{/unless}}
    <button type="submit">Submit</button>
  </form>
  {{#if login}}
    <a id = "signuplink" href="/signup">Need to register? Click here to sign-up</a>
  {{else}}
    <a href="/login/" id = "loginlink">Already have an account? Click here to log-in</a>
  {{/if}}
  </div>
  <div id="errordiv">
  {{#if error}}
    <p class ="error" id="error">{{errorMsg}}</p>
  {{else}}
    <p class ="error" id="error"></p>
  {{/if}}
  </div>
</article>

