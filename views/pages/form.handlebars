<article>
  <h1>Login</h1>
  <form action={{act}} method="POST" id="{{formId}}">
    <label for="username">
      Username
    </label>
    <input type="text" name="username" id="username" />
    <label for="password">
      Password
    </label>
    <input type="password" name="password" id="password" />
    <label for="email">
      Email
    </label>
    <input type="email" name="email" id="email" />
    <button type="submit">Submit</button>
  </form>
  {{#if login}}
    <a href="/signup">Need to register? Click here to sign-up</a>
  {{else}}
    <a href="/">Already have an account? Click here to log-in</a>
  {{/if}}
  {{#if error}}
    <p>Error: {{errorMsg}}</p>
  {{/if}}
</article>